# Azure Log Analytics Configuration
AZURE_TENANT_ID=your-tenant-id
AZURE_CLIENT_ID=your-client-id
AZURE_CLIENT_SECRET=your-client-secret

# Log Analytics Workspace - Found in the properties blade of your Log Analytics Workspace in the Azure Portal
LOG_ANALYTICS_WORKSPACE_ID=your-workspace-id

# Query Configuration
QUERY_TABLE_NAME=YourTableName
DAYS_TO_QUERY=90
CHUNK_SECONDS=30

# Parallel Execution
MAX_THREADS=5

# Output Configuration
OUTPUT_DIR=./output
LOG_FILE=./query_log.csv
